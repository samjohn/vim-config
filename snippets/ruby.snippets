snippet desc Describe subject
	describe "${1:subject}" do
		${2}
	end
snippet con Context
	context "${1:subject}" do
		${2}
	end
snippet it it block
	it "${1:should do something}" do
		${2}
	end
snippet bef Before each test
	before do
		${1}
	end
snippet aft After each test
	after do
		${1}
	end
snippet let
	let(:${1}) { ${2} }
snippet its
	its(:${1}) { ${2} }
snippet i it closure
	it { ${1} }
snippet subj subject
	subject { ${1} }

